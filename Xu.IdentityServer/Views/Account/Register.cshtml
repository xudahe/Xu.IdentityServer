@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <partial name="_ValidationSummary" />
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="RealName"></label>
                <input asp-for="RealName" class="form-control create-item" />
                <span asp-validation-for="RealName" class="text-danger"></span>
            </div>
            <span class="pwd-qus-tip">支持登录名和邮箱两种方式登录。</span>
            <div class="form-group">
                <label asp-for="LoginName"></label>
                <input asp-for="LoginName" class="form-control create-item" />
                <span asp-validation-for="LoginName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control create-item" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control create-item" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control create-item" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <span class="pwd-qus-tip">请务必认真填写密保答案，此为后期找回账户名和密码的唯一依据，不再提供人工找回密码！请牢记自己的内容。</span>
            <br />
            <span class="pwd-qus-tip">密保问题两个必须都填写。</span>
            <div class="form-group">
                <label asp-for="FirstQuestion"></label>
                <input asp-for="FirstQuestion" class="form-control create-item" />
                <span asp-validation-for="FirstQuestion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SecondQuestion"></label>
                <input asp-for="SecondQuestion" class="form-control create-item" />
                <span asp-validation-for="SecondQuestion" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

